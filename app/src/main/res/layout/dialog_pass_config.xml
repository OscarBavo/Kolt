<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pass_config"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:passwordToggleEnabled="true"
        android:layout_margin="@dimen/dim_size_8"
        app:helperText="@string/title_generic_input_data_required"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pass_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/input_text_password"
            android:imeOptions="actionDone"
            android:maxLength="12"
            android:singleLine="true"
            android:hint="@string/title_edit_password"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>