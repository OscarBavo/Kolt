<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.transfer.TransferFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_key_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_key_item"
        android:layout_margin="@dimen/dim_size_5"
        app:helperText="@string/title_generic_input_data_required"
        app:endIconMode="clear_text"
        app:counterMaxLength="50"
        app:counterEnabled="true"
        app:startIconDrawable="@drawable/ic_qr_code"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_key_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            style="@style/input_text"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_unique_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_unique_item"
        android:layout_margin="@dimen/dim_size_5"
        app:helperText="@string/title_generic_input_data_required"
        app:endIconMode="clear_text"
        app:counterMaxLength="50"
        app:counterEnabled="true"
        app:startIconDrawable="@drawable/ic_qr_code"
        app:layout_constraintTop_toBottomOf="@+id/til_key_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_unique_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="50"
            style="@style/input_text"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/vw_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dim_size_5"
        app:layout_constraintStart_toStartOf="@id/til_unique_code"
        app:layout_constraintTop_toBottomOf="@id/til_unique_code" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_batch_roll"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_size_16"
        style="@style/input_text.item.title"
        android:text="@string/title_tv_batch"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/vw_divider"
        app:layout_constraintStart_toStartOf="@id/vw_divider"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_batch_roll_data"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        style="@style/input_text.item"
        tools:text="10140874"
        android:textAlignment="center"
        android:layout_marginEnd="@dimen/dim_size_8"
        app:layout_constraintTop_toTopOf="@id/tv_batch_roll"
        app:layout_constraintEnd_toEndOf="@id/vw_divider"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_pieces"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_size_8"
        style="@style/input_text.item.title"
        android:text="@string/title_tv_pieces"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_batch_roll"
        app:layout_constraintStart_toStartOf="@id/tv_batch_roll"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_pieces_data"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        style="@style/input_text.item"
        tools:text="300"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/tv_pieces"
        app:layout_constraintEnd_toEndOf="@id/tv_batch_roll_data"
        />
</androidx.constraintlayout.widget.ConstraintLayout>