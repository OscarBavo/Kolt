<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.home.webservice.ConfigWebServiceBottomSheet">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_config_web_service"
        style="@style/input_text"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_5"
        android:text="@string/config_web_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_ip_web_service"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:hint="@string/hint_web_service_ip"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_config_web_service">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_ip_web_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_id"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:text="@string/active_dummy"
        app:layout_constraintTop_toBottomOf="@id/til_ip_web_service"
        app:layout_constraintStart_toStartOf="@id/til_ip_web_service"
        app:layout_constraintEnd_toEndOf="@id/til_ip_web_service"
        android:layout_marginTop="@dimen/dim_size_5"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        style="@style/Button.Primary"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_size_16"
        android:text="@string/title_on_back_press_cancel"
        app:layout_constraintStart_toStartOf="@id/til_ip_web_service"
        app:layout_constraintTop_toBottomOf="@id/switch_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/Button.Primary"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_size_16"
        android:text="@string/text_general_app_save"
        app:layout_constraintEnd_toEndOf="@id/til_ip_web_service"
        app:layout_constraintTop_toBottomOf="@id/switch_id" />

</androidx.constraintlayout.widget.ConstraintLayout>