<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".transfer.presentation.BottomSheetTransferConfirmation">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_pt"
        style="@style/input_text.item.title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="@dimen/dim_size_16"
        android:text="@string/title_bottom_transfer_product_done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_pt"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="@string/title_bottom_transfer_product_done"
        app:layout_constraintStart_toStartOf="@id/tv_title_pt"
        app:layout_constraintEnd_toEndOf="@id/tv_title_pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_pt" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_no_part"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:text="@string/title_bottom_transfer_no_part"
        app:layout_constraintStart_toStartOf="@id/tv_title_pt"
        app:layout_constraintTop_toBottomOf="@id/tv_pt" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_no_part"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/tv_title_no_part"
        app:layout_constraintStart_toStartOf="@id/tv_title_no_part"
        app:layout_constraintTop_toBottomOf="@id/tv_title_no_part"
        tools:text="101408" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_unique_code"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:text="@string/title_bottom_transfer_unique_code"
        app:layout_constraintEnd_toEndOf="@id/tv_pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_pt" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_unique_code"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/tv_title_unique_code"
        app:layout_constraintEnd_toEndOf="@id/tv_title_unique_code"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_unique_code" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_order"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:text="@string/title_bottom_transfer_order"
        app:layout_constraintStart_toStartOf="@id/tv_pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_no_part" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_order"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/tv_title_order"
        app:layout_constraintEnd_toEndOf="@id/tv_title_order"
        app:layout_constraintTop_toBottomOf="@id/tv_title_order"
        tools:text="PP2345" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_batch"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:text="@string/title_tv_transfer_batch"
        app:layout_constraintEnd_toEndOf="@id/tv_text_unique_code"
        app:layout_constraintStart_toStartOf="@id/tv_text_unique_code"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_unique_code" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_batch"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/tv_title_batch"
        app:layout_constraintEnd_toEndOf="@id/tv_title_batch"
        app:layout_constraintTop_toBottomOf="@id/tv_title_batch"
        tools:text="10140874987654321" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_pieces"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:text="@string/title_tv_transfer_pieces"
        app:layout_constraintStart_toStartOf="@id/tv_text_batch"
        app:layout_constraintEnd_toEndOf="@id/tv_text_batch"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_batch" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_pieces"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/tv_title_pieces"
        app:layout_constraintEnd_toEndOf="@id/tv_text_batch"
        app:layout_constraintTop_toBottomOf="@id/tv_title_pieces"
        tools:text="300" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_team_worker"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="@dimen/dim_size_150"
        android:layout_height="wrap_content"
        android:hint="@string/title_bottom_transfer_team_work"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="@id/tv_pt"
        app:layout_constraintTop_toBottomOf="@id/tv_text_order">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_team_worker"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_perforadora"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="@dimen/dim_size_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_size_8"
        android:hint="@string/title_bottom_transfer_perforadora"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="@+id/tv_pt"
        app:layout_constraintTop_toBottomOf="@+id/til_team_worker">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_perforadora"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_standard_pack"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="@dimen/dim_size_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_size_8"
        android:hint="@string/title_bottom_transfer_standard_pack"
        app:counterMaxLength="@integer/dim_7"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="@+id/tv_pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_pieces">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_standard_pack"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:maxLength="@integer/dim_7" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_note"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/label_note_printer"
        app:layout_constraintStart_toStartOf="@id/tv_pt"
        app:layout_constraintEnd_toEndOf="@id/tv_pt"
        app:layout_constraintTop_toBottomOf="@+id/til_standard_pack" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/Button.Primary"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_size_16"
        android:layout_marginBottom="@dimen/dim_size_16"
        android:text="@string/text_general_app_save"
        app:layout_constraintEnd_toEndOf="@+id/tv_pt"
        app:layout_constraintStart_toStartOf="@+id/tv_pt"
        app:layout_constraintTop_toBottomOf="@id/tv_note" />
</androidx.constraintlayout.widget.ConstraintLayout>