<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".transfer.presentation.BottomSheetTransferConfirmation">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_no_part"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_16"
        android:text="@string/title_bottom_transfer_no_part"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_no_part"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dim_size_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title_no_part"
        tools:text="101408" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_unique_code"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:text="@string/title_bottom_transfer_unique_code"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_no_part" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_unique_code"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_text_no_part"
        app:layout_constraintTop_toTopOf="@id/tv_title_unique_code"
        tools:text="AJ2345" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_order"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:text="@string/title_bottom_transfer_order"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_unique_code" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_order"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_text_unique_code"
        app:layout_constraintTop_toTopOf="@id/tv_title_order"
        tools:text="PP2345" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_batch"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:text="@string/title_tv_transfer_batch"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_order" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_batch"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_text_order"
        app:layout_constraintTop_toTopOf="@id/tv_title_batch"
        tools:text="10140874" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_pieces"
        style="@style/input_text.item.title"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:text="@string/title_tv_transfer_pieces"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_batch" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text_pieces"
        style="@style/input_text.item"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_text_batch"
        app:layout_constraintTop_toTopOf="@id/tv_title_pieces"
        tools:text="300" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="@dimen/dim_size_1"
        android:layout_margin="@dimen/dim_size_5"
        android:background="@color/color_divider"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_pieces" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_team_worker"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:hint="@string/title_bottom_transfer_team_work"
        android:visibility="gone"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vw_divider">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_team_worker"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_perforadora"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:hint="@string/title_bottom_transfer_perforadora"
        android:visibility="gone"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_team_worker">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_perforadora"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_standard_pack"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_8"
        android:hint="@string/title_bottom_transfer_standard_pack"
        android:visibility="gone"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_perforadora">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_text_standard_pack"
            style="@style/input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapWords"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clean"
        style="@style/button_text"
        android:layout_width="@dimen/dim_size_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_size_16"
        android:padding="@dimen/dim_size_16"
        android:text="@string/text_general_app_clean"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/til_standard_pack"
        app:layout_constraintTop_toBottomOf="@id/til_standard_pack" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_size_16"
        android:layout_marginBottom="@dimen/dim_size_16"
        android:text="@string/text_general_app_save"
        app:layout_constraintEnd_toEndOf="@+id/til_standard_pack"
        app:layout_constraintTop_toBottomOf="@id/til_standard_pack" />
</androidx.constraintlayout.widget.ConstraintLayout>