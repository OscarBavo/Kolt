<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dim_size_5"/>
            <stroke android:width="@dimen/dim_size_2" android:color="@color/white"/>
            <gradient android:angle="90" android:startColor="@color/black"
                android:endColor="@color/black"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dim_size_5"/>
            <stroke android:width="@dimen/dim_size_2" android:color="@color/gray_own"/>
            <gradient android:angle="90"
                android:startColor="@android:color/holo_red_dark"
                android:endColor="@color/black"/>
        </shape>
    </item>


</selector>