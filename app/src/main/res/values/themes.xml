<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.Kolt" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="android:toolbarStyle">@color/primaryColor</item>
    </style>

    <style name="input_text">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dim_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="input_text.find">
        <item name="android:background">@color/teal_200</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="input_text.recieve">
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/dim_text_10</item>
        <item name="android:imeOptions">actionGo|actionNext</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="input_text.qr">
        <item name="android:textSize">@dimen/dim_size_16</item>
        <item name="android:textStyle">normal</item>
        <item name="singleLine">true</item>
        <item name="android:imeOptions">actionGo|actionNext</item>
    </style>
    <style name="input_text.number_next">
        <item name="android:imeOptions">actionNext</item>
        <item name="singleLine">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="input_text.number_go">
        <item name="android:imeOptions">actionGo</item>
        <item name="singleLine">true</item>
    </style>

    <style name="input_text.label">
        <item name="android:textSize">@dimen/dim_text_12</item>
    </style>

    <style name="input_text.small_label">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/dim_text_16</item>
    </style>

    <style name="input_text.item">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_text_14</item>
        <item name="android:textColor">@color/letter</item>
    </style>

    <style name="input_text.item.title">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_text_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="input_text.item.title.import">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dim_text_18</item>
        <item name="android:textColor">@color/red_own</item>
    </style>

    <style name="input_text.item.upper">
        <item name="android:textSize">@dimen/dim_text_18</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="input_text.item.text">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/dim_text_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text"> </item>
    </style>

    <style name="input_text.version">
        <item name="android:textSize">@dimen/dim_text_14</item>
    </style>

    <style name="input_text_password">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dim_text_24</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">@integer/max_pass</item>
        <item name="android:imeOptions">actionGo|actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textSize">@dimen/dim_text_18</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="button_text">
        <item name="android:background">@drawable/btn_rounded_enable</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dim_text_18</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Kolt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kolt" parent="Base.Theme.Kolt" />

    <style name="Theme.Kolt.ActionBar">
        <item name="background">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>
</resources>